@model Company
@{
    ViewData["Title"] = Model.Id != 0 ? "Edit" : "Create";
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row mb-3">
        <div class="col-10">
            <div class="p-3 mt-3 row mb-3">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Edit" : "Create") Product</h2>
                    <div class="border-3 w-100 bg-primary" style="height:2px"></div>
                </div>
                <input type="text" asp-for="@Model.Id" hidden />

                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class=" form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StreetAddress"></label>
                    <input type="text" asp-for="StreetAddress" class=" form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City"></label>
                    <input type="text" asp-for="City" class=" form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="State"></label>
                    <input type="text" asp-for="State" class=" form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PostalCode"></label>
                    <input type="text" asp-for="PostalCode" class=" form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input type="text" asp-for="PhoneNumber" class=" form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="row w-100 mb-3">
                    @if (Model.Id != 0)
                    {
                        <button class="btn btn-outline-primary col-6 w-25 mx-2" type="submit">Update</button>
                    }
                    else
                    {
                        <button class="btn btn-outline-primary col-6 w-25 mx-2" type="submit">Create</button>
                    }
                    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary col-6 w-25 mx-2">
                        <i class="bi bi-arrow-left-circle"></i> &nbsp;
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}