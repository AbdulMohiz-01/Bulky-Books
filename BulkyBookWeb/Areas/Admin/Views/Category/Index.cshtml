@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">

    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        @if (Model.Count() > 0)
        {
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody id="table-body">
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">
                            @item.Name
                        </td>
                        <td width="30%">
                            @item.DisplayOrder
                        </td>
                        <td class="btn-group w-100" width="20%" role="group">
                            <a class="btn btn-info m-0 w-50" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                            <button class="btn btn-danger m-0 w-50" onClick="handleDelete('/Admin/Category/Delete/@item.Id')"><i class="bi bi-trash"></i> &nbsp; Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <h5 class="text-info">No Categories found! Add new Category.</h5>
        }
    </table>
</div>

@section Scripts{
    <script src="~/js/category.js" type="text/javascript"></script>
}