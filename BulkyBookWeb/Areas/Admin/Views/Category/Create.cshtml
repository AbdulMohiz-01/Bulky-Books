@model Category
@{
    ViewData["Title"] = "Create";
}
<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <div class="border-3 w-100 bg-primary" style="height:2px"></div>

        </div>
        <div class="mb-3" >
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class=" form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @*<div asp-validation-summary="all"></div>*@
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" class=" form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-outline-primary" type="submit" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> &nbsp;
            Back to List</a>
    </div>
</form>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}