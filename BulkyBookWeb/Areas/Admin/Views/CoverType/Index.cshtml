@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">
                Cover Type List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Cover Type
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        @if (Model.Count() > 0)
        {
                <thead>
                    <tr>
                        <th>
                            Cover Type Name
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td width="60%">
                            @item.Name
                                </td>
                                <td class="btn-group w-100" width="40%" role="group">
                                    <a class="btn btn-info m-0 w-50" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                                    <a class="btn btn-danger m-0 w-50" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> &nbsp; Delete</a>
                                </td>
                            </tr>
                }
                </tbody>
        }
        else
        {
                <h5 class="text-info">No Cover Type found! Add new Cover Type.</h5>
        }
    </table>
</div>